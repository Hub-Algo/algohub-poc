{
  "name": "algohub_poc_smart_contracts",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "generate-campaign": "algokitgen generate -a contracts/artifacts/campaign/Campaign.json -o contracts/clients/CampaignClient.ts",
    "generate-factory": "algokitgen generate -a contracts/artifacts/campaign/AlgohubCampaignFactory.json -o contracts/clients/AlgohubCampaignFactory.ts",
    "generate-voters": "algokitgen generate -a contracts/artifacts/voters/Voters.json -o contracts/clients/VotersClient.ts",
    "generate-clients": "npm run generate-campaign && npm run generate-factory && npm run generate-voters",
    "generate-campaign-comp": "algokit-generate-component contracts/artifacts/campaign/Campaign.json contracts/artifacts/campaign/components",
    "generate-factory-comp": "algokit-generate-component contracts/artifacts/campaign/AlgohubCampaignFactory.json contracts/artifacts/campaign/components",
    "generate-voters-comp": "algokit-generate-component contracts/artifacts/voters/Voters.json contracts/artifacts/voters/components",
    "generate-components": "npm run generate-campaign-comp && npm run generate-factory-comp && npm run generate-voters-comp",
    "compile-campaign": "tealscript contracts/campaign/campaign.algo.ts contracts/artifacts/campaign",
    "compile-voters": "tealscript contracts/voters/voters.algo.ts contracts/artifacts/voters",
    "build": "npm run compile-campaign && npm run compile-voters && npm run generate-clients && npm run generate-components",
    "test": "npm run build && jest",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "deploy": "ts-node-dev --transpile-only --watch .env -r dotenv/config ./contracts/index.ts",
    "deploy:ci": "ts-node --transpile-only -r dotenv/config ./contracts/index.ts"
  },
  "dependencies": {
    "@algorandfoundation/algokit-utils": "^4.1.0",
    "algosdk": "^2.7.0"
  },
  "devDependencies": {
    "@algorandfoundation/algokit-client-generator": "^2.2.5",
    "@algorandfoundation/tealscript": "^0.61.0",
    "@jest/globals": "^29.5.0",
    "@joe-p/algokit-generate-component": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.0.2",
    "dotenv": "^16.0.3"
  }
}
