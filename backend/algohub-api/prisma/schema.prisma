// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int        @id @unique @default(autoincrement())
  wallet_address    String     @unique
  username          String
  is_vip            Boolean
  created_campaigns Campaign[]
}

model Campaign {
  id          Int           @id @unique @default(autoincrement())
  title       String
  description String
  creator     String
  website     String
  media_id    Int
  media       CampaignMedia @relation(fields: [media_id], references: [id])
  user        User          @relation(fields: [creator], references: [wallet_address])
}

model CampaignMedia {
  id       Int        @id @unique @default(autoincrement())
  url      String
  Campaign Campaign[]
}
